<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_place"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <ImageView
        android:id="@+id/ivPlaceBac"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/placebac"/>
    <ImageView
        android:id="@+id/ivPlaceTrungBac"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/placetrungbac"/>
    <ImageView
        android:id="@+id/ivPlaceTrungNam"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/placetrungnam"/>
    <ImageView
        android:id="@+id/ivPlaceNam"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/placemiennam"/>
    <ImageView
        android:id="@+id/ivMapPlace"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/mapcolor"
        android:scaleType="fitXY"
        android:visibility="visible"
        />


    <LinearLayout
        android:id="@+id/rlListPlace"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:visibility="gone"
        android:background="#ECEFF1"
        >
        <android.support.v7.widget.RecyclerView
            android:id="@+id/rcvListPlace"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="vertical"/>
    </LinearLayout>
</RelativeLayout>
